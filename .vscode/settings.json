{
  // Explorer
  "explorer.compactFolders": false,
  "explorer.decorations.badges": false,
  // Workbench
  "workbench.sideBar.location": "right",
  "window.zoomLevel": 0,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Omni Owl",
  "workbench.editor.decorations.colors": false,
  "workbench.editor.decorations.badges": false,
  "workbench.statusBar.visible": true,
  "workbench.layoutControl.enabled": false,
  // Editor
  "editor.fontFamily": "Fira Code, 'Fira Code', 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontSize": 14,
  "editor.bracketPairColorization.enabled": true,
  // "editor.colorDecorators": true,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.trimAutoWhitespace": false,
  "editor.indentSize": "tabSize",
  "editor.cursorBlinking": "solid",
  "editor.lineHeight": 26,
  "editor.renderLineHighlight": "gutter",
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.fontLigatures": true,
  "editor.fontWeight": "normal",
  "editor.fontVariations": false,
  "editor.formatOnType": false,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 80,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.selectionHighlight": true,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  // Git
  "git.decorations.enabled": false,
  "git.defaultBranchName": "main",
  "git.enabled": true,
  // Terminal
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontFamily": "Fira Code, 'Fira Code', 'Droid Sans Mono', 'monospace'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.cursorStyle": "underline",
  // Clock
  "dateTime.showHours": true,
  "dateTime.locale": "br",
  "dateTime.showDayOfMonth": true,
  "dateTime.showMonth": true,
  "livePreview.defaultPreviewPath": "/src/static/index.html",
  "C_Cpp.default.compilerPath": "/usr/bin/gcc-11",
}